<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MapsExercise"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsExercise">

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="602dp"
        android:background="#686666"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCoron"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/coronv2"
            android:text="Coron" />

        <TextView
            android:id="@+id/txtCoron"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:text="Coron, PH"
            android:textColor="@color/red" />

        <ImageButton
            android:id="@+id/btnSiargao"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/siargaov2"
            android:text="Siargao" />

        <TextView
            android:id="@+id/txtSiargao"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Siargao, PH"
            android:textColor="@color/red" />

        <ImageButton
            android:id="@+id/btnDaikoku"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/daikokuv2"
            android:text="Daikoku " />

        <TextView
            android:id="@+id/txtDaikoku"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Daikoku, JPN"
            android:textColor="@color/red" />

        <ImageButton
            android:id="@+id/btnNurburgring"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/nurburgringv2"
            android:text="NÃ¼rburgring" />

        <TextView
            android:id="@+id/txtNurburgring"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Nurburgring, DE"
            android:textColor="@color/red" />

        <ImageButton
            android:id="@+id/btnNewZealand"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/newzealandv2"
            android:text="New Zealand" />

        <TextView
            android:id="@+id/txtQueenstown"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Queenstown, NZ"
            android:textColor="@color/red" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>